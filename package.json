  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "bugs": {
    "url": "https://github.com/thundra-io/thundra-cdk-alarm-creator/issues"
  },
  "homepage": "https://github.com/thundra-io/thundra-cdk-alarm-creator#readme",
  "publishConfig": {
    "access": "public"
  }
